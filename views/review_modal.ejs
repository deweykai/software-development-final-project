<button class="btn btn-primary" id="modalButton" onclick="showReviewModal()">Add Review</button>

<div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="modalTitle">Add Review</div>
      <div class="modal-body">
        <form onsubmit="addReview(event)" onkeyup="checkReview()">
          <div class="mb-3 row">
            <label for="title_input" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" disabled id="title_input">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="review_input" class="col-sm-2 col-form-label">Review</label>
            <div class="col-sm-10">
              <textarea type="textarea" class="form-control" id="review_input"></textarea>
            </div>
          </div>
          <button type="submit" class="btn btn-primary" id="submitReviewButton" disabled>Add Review</button>
        </form>
      </div>
    </div>
  </div>
</div>